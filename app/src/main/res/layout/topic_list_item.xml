<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageButton
        android:id="@+id/decreaseButton"
        android:layout_width="25dp"
        android:layout_height="25dp"

        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_minus"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/taskCounterTextView"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/decreaseButton"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="0"
        android:fontFamily="@font/montagu_slab"
        android:textSize="16sp"
        android:layout_marginStart="8dp"/>



    <ImageButton
        android:id="@+id/increaseButton"
        android:layout_toEndOf="@id/taskCounterTextView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_plus"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/topicNameTextView"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/increaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montagu_slab"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

</RelativeLayout>
