<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#251135"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SuccessEnfOfQuest">
    <ImageView
        android:src="@drawable/goblet"
        android:layout_centerHorizontal="true"
        android:translationZ="3dp"
        android:layout_marginTop="200dp"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <ImageView
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/stars"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <ImageView
        android:layout_alignParentEnd="true"
        android:scaleX="-1"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/stars"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <androidx.cardview.widget.CardView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="#2D0B49"
        app:cardCornerRadius="20dp"
        android:layout_width="350dp"
        android:layout_height="200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Вы победили!"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/montserrat_alternates_semi_bold"
                android:textSize="36sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/nextSuccBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="Продолжить"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</RelativeLayout>