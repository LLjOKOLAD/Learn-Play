<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/module1Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#4E0D6B">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Раздел 1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSubsection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginEnd="10dp"
                    android:text="Клартиры и садовые участки"/>

                <Button
                    android:id="@+id/button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Справочник"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/module1Buttns"
        android:layout_below="@id/module1Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/map_but_1_rel"
            android:layout_marginTop="20dp"
            android:layout_marginStart="190dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/map_but_1"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:scaleType="fitCenter"
                android:background="#251135"
                android:src="@drawable/map_reg_button"/>
            <ImageView
                android:id="@+id/map_but_1_num"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/map_but_1_num"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/map_but_2_rel"
            android:layout_marginTop="10dp"
            android:layout_marginStart="150dp"
            android:layout_below="@id/map_but_1_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/map_but_2"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:scaleType="fitCenter"
                android:background="#251135"
                android:src="@drawable/map_reg_button"/>
            <ImageView
                android:id="@+id/map_but_2_num"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/map_but_2_num"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/map_but_3_rel"
            android:layout_marginTop="10dp"
            android:layout_marginStart="115dp"
            android:layout_below="@id/map_but_2_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/map_but_3"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:scaleType="fitCenter"
                android:background="#251135"
                android:src="@drawable/map_reg_button"/>
            <ImageView
                android:id="@+id/map_but_3_num"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/map_but_3_num"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/map_boss_1_rel"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:layout_below="@id/map_but_3_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/map_but_4"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:background="#251135"
                android:src="@drawable/map_boss_button"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/map_but_4_rel"
            android:layout_marginTop="10dp"
            android:layout_marginStart="125dp"
            android:layout_below="@id/map_boss_1_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/map_but_5"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:scaleType="fitCenter"
                android:background="#251135"
                android:src="@drawable/map_reg_button"/>
            <ImageView
                android:id="@+id/map_but_4_num"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/map_but_4_num"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/map_but_5_rel"
            android:layout_marginTop="10dp"
            android:layout_marginStart="160dp"
            android:layout_below="@id/map_but_4_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/map_but_6"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:scaleType="fitCenter"
                android:background="#251135"
                android:src="@drawable/map_reg_button"/>
            <ImageView
                android:id="@+id/map_but_5_num"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/map_but_5_num"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/map_but_6_rel"
            android:layout_marginTop="10dp"
            android:layout_marginStart="190dp"
            android:layout_below="@id/map_but_5_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/map_but_7"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:scaleType="fitCenter"
                android:background="#251135"
                android:src="@drawable/map_reg_button"/>
            <ImageView
                android:id="@+id/map_but_6_num"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/map_but_6_num"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/map_boss_2_rel"
            android:layout_marginTop="10dp"
            android:layout_marginStart="205dp"
            android:layout_below="@id/map_but_6_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/map_but_8"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:background="#251135"
                android:src="@drawable/map_boss_button"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/map_but_7_rel"
            android:layout_marginTop="10dp"
            android:layout_marginStart="180dp"
            android:layout_below="@id/map_boss_2_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/map_but_9"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:scaleType="fitCenter"
                android:background="#251135"
                android:src="@drawable/map_reg_button"/>
            <ImageView
                android:id="@+id/map_but_7_num"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/map_but_7_num"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>



